generator client_js {
  provider      = "prisma-client-js"
  // Output for JS client (if needed elsewhere, maybe web/)
  // output = "../web/node_modules/@prisma/client" 
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// --- Add Python Generator --- 
generator client_py {
  provider = "prisma-client-py"
  // Explicit output path relative to this schema file
  output   = "../generated/prisma"
  // You might need specific binaryTargets depending on your deployment OS
  // For Fly.io Debian Bullseye (python:3.11-slim), debian-openssl-1.1.x is usually needed
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}
// --- End Add Python Generator ---

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- Application Models ---

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique // Clerk User ID
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Subscription Fields (to be added later) ---
  // stripeCustomerId     String?   @unique
  // subscriptionId       String?   @unique
  // subscriptionStatus   String?   // e.g., 'free', 'active', 'canceled'
  // subscriptionEndDate  DateTime?

  // --- Start Edit: Add usage tracking fields ---
  summariesUsed Int    @default(0)
  summaryLimit  Int    @default(5) // Default limit for free tier
  plan          String @default("free") // e.g., free, pro
  // --- End Edit ---
}
