{
  "manifest_version": 3,
  "name": "Tildra: AI Summarizer",
  "version": "1.0.1",
  "description": "Get instant AI summaries (TL;DR) of any webpage or article.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://tildra.fly.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/tildra-16.png",
      "48": "icons/tildra-48.png",
      "128": "icons/tildra-128.png"
    }
  },
  "icons": {
    "16": "icons/tildra-16.png",
    "48": "icons/tildra-48.png",
    "128": "icons/tildra-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/Readability.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 