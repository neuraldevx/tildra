{
  "manifest_version": 3,
  "name": "Tildra - AI Article Summarizer",
  "version": "3.1.1",
  "description": "Instantly summarize any article or webpage with AI. Get key points, insights, and save time reading.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://tildra.fly.dev/*",
    "https://www.tildra.xyz/*",
    "http://localhost:*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background-simple.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tildra - Summarize this page",
    "default_icon": {
      "16": "favicon/favicon-96x96.png",
      "48": "favicon/favicon-96x96.png",
      "128": "favicon/web-app-manifest-192x192.png"
    }
  },
  "icons": {
    "16": "favicon/favicon-96x96.png",
    "48": "favicon/favicon-96x96.png", 
    "128": "favicon/web-app-manifest-192x192.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup-simple.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 